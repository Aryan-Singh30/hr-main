		{
			"name": "Authentication",
			"item": [
				{
					"name": "1. Get CSRF Token",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"const response = pm.response.json();",
									"pm.environment.set(\"csrfToken\", response.csrfToken);",
									"pm.test(\"CSRF token received\", function () {",
									"    pm.expect(response.csrfToken).to.exist;",
									"});",
									"console.log(\"CSRF Token:\", response.csrfToken);"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/auth/csrf",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "csrf"]
						},
						"description": "Fetch CSRF token required for NextAuth authentication"
					},
					"response": []
				},
				{
					"name": "2. Sign In (Admin)",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.test(\"Status code is 302 or 200\", function () {",
									"    pm.expect(pm.response.code).to.be.oneOf([200, 302]);",
									"});",
									"",
									"const cookies = pm.cookies.toObject();",
									"if (cookies['next-auth.session-token']) {",
									"    pm.environment.set(\"sessionToken\", cookies['next-auth.session-token']);",
									"    console.log(\"Session token saved:\", cookies['next-auth.session-token']);",
									"} else if (cookies['__Secure-next-auth.session-token']) {",
									"    pm.environment.set(\"sessionToken\", cookies['__Secure-next-auth.session-token']);",
									"    console.log(\"Secure session token saved\");",
									"}"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/x-www-form-urlencoded"
							}
						],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "email",
									"value": "admin@local.dev",
									"type": "text"
								},
								{
									"key": "password",
									"value": "Admin123!",
									"type": "text"
								},
								{
									"key": "csrfToken",
									"value": "{{csrfToken}}",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{baseUrl}}/api/auth/callback/credentials",
							"host": ["{{baseUrl}}"],
							"path": ["api", "auth", "callback", "credentials"]
						},
						"description": "Sign in with admin credentials"
					},
					"response": []
				},
